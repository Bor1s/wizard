<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render :partial => "step_#{@post.step}", :locals => { :f => f } %>
  
  <div class="actions">
    <%= f.submit "Prev", :name => 'prev_step' unless @post.first_step? %>
    <%= f.submit 'Next' %>
  </div> 
<% end %>


